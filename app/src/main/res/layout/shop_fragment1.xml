<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.Shop_Fragment1"
    android:gravity="center"
    android:id="@+id/shopfragment">
    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/flowershop"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_shop"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토끼풀꽃"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/shop_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 마포구 와우산로29길 55 토끼풀꽃"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-1234-5678"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/openclose_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일12:00~22:00 일월화수목
주말12:00~22:30 금토"/>
    </LinearLayout>
</RelativeLayout>